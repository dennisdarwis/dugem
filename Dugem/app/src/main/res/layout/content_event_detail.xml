<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dennisdarwis.dugem.EventDetail"
    tools:showIn="@layout/activity_event_detail"
    android:orientation="vertical"
    android:background="#212121">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:id="@+id/eventImage"
                android:layout_gravity="center_horizontal"
                android:layout_weight="15.30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Event Name"
                android:id="@+id/eventNameVenue"
                android:textIsSelectable="true"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#424242"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Event Venue"
                android:id="@+id/eventVenue"
                android:textIsSelectable="true"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#424242"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Event Address"
                android:id="@+id/eventAddress"
                android:textIsSelectable="true"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#424242"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Event Price"
                android:id="@+id/eventPrice"
                android:textIsSelectable="true"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#424242"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Event Contact"
                android:id="@+id/eventContact"
                android:textIsSelectable="true"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#424242"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Event Details"
                android:id="@+id/eventDetails"
                android:textIsSelectable="true"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#424242"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Go to Website"
                android:id="@+id/buttonToWebsite"
                android:layout_gravity="center_horizontal"
                android:background="#424242"
                android:textColor="#FFFFFF" />
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Go to Map Direction"
                android:id="@+id/buttonToMap"
                android:layout_gravity="center_horizontal"
                android:background="#424242"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>
